<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<StackPane fx:id="racine" prefHeight="1050.0" prefWidth="1680.0"
           xmlns="http://javafx.com/javafx/17.0.2-ea"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="universite_paris8.iut.ameimoun.minetarouillefx.controller.Controller">
    <GridPane fx:id="tileMap" />

    <!-- écran de mort -->
    <AnchorPane fx:id="overlayDeMort" visible="false"
                style="-fx-background-color: rgba(0, 0, 0, 0.6);">
        <Label text="Vous êtes mort"
               layoutX="640" layoutY="350"
               style="-fx-text-fill: red; -fx-font-size: 60px; -fx-font-weight: bold;" />

        <Button text="Quitter"
                layoutX="760" layoutY="460"
                style="-fx-font-size: 20px;"
                onAction="#handleQuitter" />
    </AnchorPane>
</StackPane>
