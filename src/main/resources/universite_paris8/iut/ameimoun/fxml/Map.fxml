<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>



<AnchorPane fx:id="rootPane" prefHeight="1050.0" prefWidth="1680.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="universite_paris8.iut.ameimoun.minetarouillefx.controller.JeuController">
    <TilePane fx:id="tileMap" />

    <!-- écran de mort -->
    <AnchorPane fx:id="overlayDeMort" visible="false"
                style="-fx-background-color: rgba(0, 0, 0, 0.6);"
                AnchorPane.topAnchor="0.0"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0">

        <VBox alignment="CENTER" spacing="20" layoutX="640" layoutY="350">
            <Label text="Vous êtes mort"
                   style="-fx-text-fill: red; -fx-font-size: 60px; -fx-font-weight: bold;" />
            <Button text="Quitter"
                    style="-fx-font-size: 20px;"
                    onAction="#handleQuitter" />
        </VBox>
    </AnchorPane>

</AnchorPane>