<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="universite_paris8.iut.ameimoun.minetarouillefx.controller.EcranAccueilController">

<ImageView fx:id="backgroundView" fitWidth="1680" fitHeight="1050" />

<VBox fx:id="buttonBox" alignment="CENTER" spacing="40" style="-fx-padding: 20 0 0 0;">
    <ImageView fx:id="nouvellePartieImage" pickOnBounds="true" preserveRatio="true"
               fitWidth="300" fitHeight="90"
               onMouseClicked="#lancerNouvellePartie"
               />
    <ImageView fx:id="quitterImage" pickOnBounds="true" preserveRatio="true"
               fitWidth="300" fitHeight="90"
               onMouseClicked="#quitter"
               />
</VBox>

</StackPane>
